<div class="text-center mb-3">
  <a href="index.html"><img src="/assets/logo-full.png" alt=""></a>
</div>

<h4 class="text-center mb-4 text-white">Change your password</h4>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <label class="mb-1 text-white"><strong>New Password</strong></label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group">
    <label class="mb-1 text-white"><strong>Confirm new password</strong></label>
    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="text-center mt-4">
    <%= f.submit "Sign up", class:"btn bg-white text-primary btn-block" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
